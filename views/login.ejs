<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('template/header.ejs') -%>
</head>
<body>
  <%- include('template/authNavBar.ejs'); -%>

  <div class="headerLoginContainer">
    <img src="/images/logoMarket.png" class="logoMarketLogin" alt="">
  </div>

    <div class="formContainer">
       <form action="/api/auth/login" method="POST" class="formArea">
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" name="email" class="form-control" id="emailInput" placeholder="Enter your email" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" name="password" class="form-control" placeholder="Enter your password" id="passwordInput">
        </div>
        <button type="submit" id="loginSubmit" class="btnSubmitLogin">login</button>
      </form>
    </div>

    <script src="/javascripts/main.js"></script>
</body>
</html>